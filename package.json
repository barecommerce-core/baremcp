{
  "name": "@barecommerce/mcp",
  "version": "1.0.0",
  "description": "MCP server for BareCommerceCore e-commerce platform management via AI assistants",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "baremcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "PRIVACY.md",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && bun build src/index.ts --outdir dist --target node --format esm",
    "dev": "bun run src/index.ts",
    "dev:watch": "bun --watch run src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "barecommercecore",
    "ecommerce",
    "ai",
    "bun",
    "claude",
    "llm",
    "anthropic"
  ],
  "author": "BareCommerceCore Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/barecommerce-core/baremcp"
  },
  "bugs": {
    "url": "https://github.com/barecommerce-core/baremcp/issues"
  },
  "homepage": "https://github.com/barecommerce-core/baremcp#readme",
  "engines": {
    "node": ">=20",
    "bun": ">=1.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "bun-types": "latest",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0"
  }
}
